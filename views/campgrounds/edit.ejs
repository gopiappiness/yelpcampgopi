<% layout('/layouts/boilerplate') %> 
     
<div class="row">
    <h1 class="text-center">Weclcome Edit Temples!!!</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds/<%=campground._id %>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text"  placeholder="Enter Title Name" id="title" name="campground[title]"value="<%=campground.title%>" required>
                <div class="valid-feedback">
                    looks good!
                </div>
            </div>
            <div class="mb-3">
                <label  class="form-label" for="location">Location</label>
                <input class="form-control" type="text" placeholder="Enter Location" id="location" name="campground[location]" value="<%=campground.location%>"required>
                <div class="valid-feedback">
                    looks good!
                </div>
            </div>
           
            <div class="mb-3">
                <label  class="form-label" for="opentiming">Open-Timing</label>
                <input class="form-control" type="text" placeholder="Ex-10:00 AM" id="opentiming" name="campground[opentiming]" value="<%=campground.opentiming%>"required>
                <div class="valid-feedback">
                    looks good!
                </div>
            </div>
            <div class="mb-3">
                <label  class="form-label" for="closetiming">Close-Timing</label>
                <input class="form-control" type="text" placeholder="Ex-07:00 PM" id="closetiming" name="campground[closetiming]" value="<%=campground.closetiming%>"required>
                <div class="valid-feedback">
                    looks good!
                </div>
            </div>
            <div class="mb-3">
                <label  class="form-label" for="contactnumber">Contact Number</label>
                <input class="form-control" type="text" placeholder="Ex:+918967546798" id="contactnumber" name="campground[contactnumber]" value="<%=campground.contactnumber%>"required>
                <div class="valid-feedback">
                    looks good!
                </div>
            </div>
            <div class="mb-3">
                <label  class="form-label" for="websites">Websites</label>
                <input class="form-control" type="text" placeholder="Ex:www.pillaiyarpattitemple.com" id="websites" name="campground[websites]" value="<%=campground.websites%>"required>
                <div class="valid-feedback">
                    looks good!
                </div>
            </div>


            <div class="mb-3">
                <label  class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" placeholder="Enter Description" id="description" name="campground[description]" required value="<%=campground.description%>"></textarea>
                <div class="valid-feedback">
                    looks good!
                </div>
            </div>
            <div class="mb-3 custom-file">
                <label for="formFile" class="form-label custom-file-label"><b>Upload Images :</b></label>
                <input class="form-control " type="file" id="formFile" name="image" multiple required>
                <div class=" valid-feedback">
                    Image is ok!
                </div>
                <div class='invalid-feedback'>
                    Upload the Images !
                </div>
            </div>
            <!-- Images deleting option in checkbox -->
        <div class="mb-3">
            <% campground.images.forEach(function(img,i){ %> 
            <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
        <div class="form-check-inline">
                <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
        </div>
            <label for="image-<%=i%>">Delete</label>
                <% }) %> 
        </div>
            
            <div class="mb-3 text-center">
            <button class="btn btn-info ">Update Temples</button>
        </div>
        </form>
        <div class="text-center">
        <a  href="/campgrounds/<%=campground._id%>">Back to Temples</a>
    </div>
    </div>
       
    </div>
</div>




